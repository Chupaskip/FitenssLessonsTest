<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/colorOfLesson"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#55CF55"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toEndOf="@id/colorOfLesson"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="13:45" />


        <TextView
            android:id="@+id/tvNameOfLesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/ivIconOfEmployee"
            app:layout_constraintEnd_toStartOf="@id/tvDurationOfLesson"
            app:layout_constraintStart_toEndOf="@id/tvStartTime"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Силовая тренировка" />

        <TextView
            android:id="@+id/tvDurationOfLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNameOfLesson"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2ч. 15мин." />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toEndOf="@id/colorOfLesson"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            tools:text="16:00" />

        <ImageView
            android:id="@+id/ivIconOfEmployee"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_employee"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvEndTime"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime" />

        <TextView
            android:id="@+id/tvTrainerFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toStartOf="@id/ivIconOfLocation"
            app:layout_constraintStart_toEndOf="@id/ivIconOfEmployee"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            tools:text="Мишенин Даниил" />

        <ImageView
            android:id="@+id/ivIconOfLocation"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_location"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvLocationOfLesson"
            app:layout_constraintStart_toEndOf="@id/tvTrainerFullName"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime" />

        <TextView
            android:id="@+id/tvLocationOfLesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIconOfLocation"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            tools:text="Тренажерный зал" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>